.wap-theme-tags-wrap
  margin 12px 8px
  display block
  height 36px
  -webkit-box-pack justify
  .wap-tag-red
    color #f06060
  ul
    display -webkit-box
    width 100%
    height 35px
    -webkit-box-pack justify
    .wap-bg-list
      background-color #f7f7f7
      margin-right 5px
      &:last-child
        margin-right 0px
    li
      -webkit-box-flex 1
      -webkit-box-sizing border-box
      display block
      color #333333
      line-height 36px !important
      height 35px
      margin-bottom 4px
      text-align center
      -webkit-box-flex 1
      width 10px
      text-align center
      vertical-align top
      a
        display  block
        font-size 13px
    .wap-theme-list
      -webkit-box-flex 1
      -webkit-box-sizing border-box
      width 36px
      height 35px
      display inline-block
      line-height 35px
      margin-right 5px
      text-align center
      a
        display block
        .wap-name
          font-size 11px !important
        .wap-font-green
          color #63b88a
        .wap-font-gray
          color #535773
        .wap-font-blue
          color #5887d0
        .wap-font-cyan
          color #4fa2b4
        .wap-font-pink
          color #fa7889
        .wap-font-orange
          color #ff8a2c
.wap-bg-green
  background-color #eaf9f1

.wap-bg-gray
  background-color #dfe3e8

.wap-bg-blue
  background-color #ebf2fc

.wap-bg-cyan
  background-color #daf0f5

.wap-bg-pink
  background-color #fee6e9

.wap-bg-orange
  background-color #fdeddc

.wap-bottom
  display -webkit-box
  margin 0 8px
  -webkit-box-pack justify
  height 16px
  border-bottom 1px solid #dddddd
